@model AutoService.Entities.Service

@{
    ViewData["Title"] = "Servis kaydı ekle";
}

<h1>Servis kaydı ekle</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceArrivalDate" class="control-label"></label>
                <input asp-for="ServiceArrivalDate" class="form-control" />
                <span asp-validation-for="ServiceArrivalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarProblem" class="control-label"></label>
                <input asp-for="CarProblem" class="form-control" />
                <span asp-validation-for="CarProblem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServicePrice" class="control-label"></label>
                <input asp-for="ServicePrice" class="form-control" />
                <span asp-validation-for="ServicePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfExitFromService" class="control-label"></label>
                <input asp-for="DateOfExitFromService" class="form-control" />
                <span asp-validation-for="DateOfExitFromService" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionsMade" class="control-label"></label>
                <input asp-for="TransactionsMade" class="form-control" />
                <span asp-validation-for="TransactionsMade" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsGuarantee" /> @Html.DisplayNameFor(model => model.IsGuarantee)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CarPlate" class="control-label"></label>
                <input asp-for="CarPlate" class="form-control" />
                <span asp-validation-for="CarPlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyType" class="control-label"></label>
                <input asp-for="BodyType" class="form-control" />
                <span asp-validation-for="BodyType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChassisNumber" class="control-label"></label>
                <input asp-for="ChassisNumber" class="form-control" />
                <span asp-validation-for="ChassisNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


